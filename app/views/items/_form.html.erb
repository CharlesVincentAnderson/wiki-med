
<%= form_for @item do |f| %>
  <%= f.text_field :name, placeholder: 'Name' %>
  <%= f.date_field :date, placeholder: 'Date' %>
  <%= f.text_field :description, placeholder: 'Description' %>
  <%= f.number_field :price, placeholder: 'Price', min: 0, step: 0.01 %>
  <%= f.submit 'Submit' %>
   <div>
      <%= collection_select(:item, :facility_id, Facility.all, :id, :name, prompt: true) %>
      <%= link_to  "Add Facility", new_facility_path %>
    </div>
<% end %> 
