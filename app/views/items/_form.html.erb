<%= form_for item do |f| %>
  <div class="p-2"><%= f.text_field :name, placeholder: 'Name' %></div>
  <div class="p-2"><%= f.date_field :date, placeholder: 'Date' %></div>
  <div class="p-2"><%= f.text_field :description, placeholder: 'Description' %></div>
  <div class="p-2"><%= f.number_field :price, placeholder: 'Price', min: 0, step: 0.01 %></div>
  <div class="p-2">
     <select name='facility_id'>
       <option>
         <% @facilities.each do |f| %>
           <option value="<%= f.id %>", placeholder:"Facility"><%= f.name %></option>
         <% end %>
       </option>
     </select>
   </div>
  <div class="p-2"><%= f.submit 'Submit', class:'btn btn-outline-primary'%></div>
<% end %>

<div class="text-center p-2">
  <%= link_to  "Add New Facility",new_facility_path, class:"btn btn-sm btn-outline-secondary" %>
  <h6>Please choose this option if your Facility is not listed.</h6>
</div>
