<main role="main">

  <div class="container border border-secondary rounded-lg mt-3">
    <h1 class="text-center">
        Items
    </h1>
  </div>

<h4 class="text-center p-2">Search</h4>

<%= link_to  "New Item",new_item_path, class:'btn btn-primary btn-sm btn-block' %>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
    <%= @items.each do |item|%>
    <div class="col-md-3">
      <div class="card mb-3">
        <div class="card-header" align="center"><%=item.name%></div>
        <div class="card-body" align='left'><%=item.description%></div>
        <div class="d-flex justify-content-center align-items-center">
          <div class="btn-group p-2">
            <%= link_to "View", item_path(item), class:"btn btn-sm btn-outline-secondary"%>
          </div>
        </div>
      </div>
    </div>
  <%end%>
    </div>
  </div>
</div>
</main>
